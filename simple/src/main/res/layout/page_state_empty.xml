<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/state_empty_icon"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:src="@drawable/ic_default_page_state_empty"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/state_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/default_page_state_empty"
        android:textColor="#999999"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/state_empty_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/solid_default_page_state_refresh"
        android:elevation="1dp"
        android:paddingStart="16dp"
        android:paddingTop="6dp"
        android:paddingEnd="16dp"
        android:paddingBottom="6dp"
        android:text="@string/default_page_state_refresh"
        android:textColor="#666666"
        android:textSize="14sp" />
</LinearLayout>